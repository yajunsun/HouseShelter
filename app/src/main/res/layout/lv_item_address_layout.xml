<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >
    
    <ImageView 
        android:id="@+id/selected_address_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/selected_iv"
        android:contentDescription="@null" />
    
    
    <FrameLayout 
        android:layout_toRightOf="@id/selected_address_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         >
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#FCFAF8" >
        <TableRow 
            android:layout_marginTop="20dp">
            <TextView 
                android:id="@+id/address_title_tv"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/self_center_font"
                android:textSize="@dimen/font_size_18" />
            <TextView 
                android:id="@+id/address_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/self_center_font"
                android:textSize="@dimen/font_size_18"
                android:background="@color/address_bg" />
        </TableRow>
        <TableRow 
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" >
            <TextView 
                android:id="@+id/device_number_title_tv"
                android:layout_marginLeft="10dp"
                android:text="@string/device_number"
                android:textColor="@color/self_center_font"
                android:textSize="@dimen/font_size_18" />
            <TextView 
                android:id="@+id/device_number_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/self_center_font"
                android:textSize="@dimen/font_size_18"
                android:background="@color/address_bg" />
        </TableRow>
    </TableLayout>
    <ImageView 
        android:id="@+id/delete_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:src="@drawable/red_delete_iv"
        android:contentDescription="@null" />
    </FrameLayout>

</RelativeLayout>