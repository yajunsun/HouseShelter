<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.tutk.IOTC.Monitor
        android:id="@+id/monitor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/pnlCameraInfo1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtConnectionSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtConnectionMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtResolutionSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtShowFPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FPS" />

            <TextView
                android:id="@+id/txtFrameRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtFPSSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtShowBPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPS" />

            <TextView
                android:id="@+id/txtBitRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtShowOnlineNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线人数" />

            <TextView
                android:id="@+id/txtOnlineNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtOnlineNumberSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtShowFrameRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="丢包率" />

            <TextView
                android:id="@+id/txtIncompleteFrameCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtFrameCountSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtFrameCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="画面质量" />

            <TextView
                android:id="@+id/txtPerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtDispFrmPreSeco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtRecvFrmSlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / " />

            <TextView
                android:id="@+id/txtRecvFrmPreSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/pnlCameraInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/turn_off_iv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@null"
                android:src="@drawable/selector_turn_off" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_button_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cloud_photo_album_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:src="@drawable/cloud_photo_album_icon" />

        <View style="@style/horizontal_placeholder_style" />

        <ImageView
            android:id="@+id/screenshot_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/screenshot_gray_icon" />

        <View style="@style/horizontal_placeholder_style" />

        <CheckBox
            android:id="@+id/voice_mute_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/voice_off_icon"
            android:button="@null"
            android:checked="true" />

        <View style="@style/horizontal_placeholder_style" />

        <ImageView
            android:id="@+id/orientation_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@null"
            android:src="@drawable/orientation_gray_icon" />

        <View style="@style/horizontal_placeholder_style" />

        <ImageView
            android:id="@+id/settings_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/settings_gray_icon" />
    </LinearLayout>

</FrameLayout>