<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90.0"
                android:centerColor="#ffdddddd"
                android:endColor="#ff333333"
                android:startColor="#ff333333" />

            <stroke
                android:width="1.0dp"
                android:color="#ff333333" />
        </shape>
    </item>
    <item
        android:bottom="1.0dp"
        android:left="4.0dp"
        android:right="4.0dp"
        android:top="1.0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90.0"
                android:centerColor="#ffFCFCFC"
                android:endColor="#ffFCFCFC"
                android:startColor="#ffFCFCFC" />
        </shape>
    </item>

</layer-list>